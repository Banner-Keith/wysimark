{
  "name": "slate-pluggable-packages",
  "packageManager": "yarn@3.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^7.2",
    "eslint": "^8.4.1",
    "eslint-config-custom": "*",
    "prettier": "^2",
    "tsconfig-paths": "^4.1.2",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "-- demo": "# demo",
    "start:local": "yarn workspace demo start:local",
    "open": "yarn workspace demo open",
    "-- lint": "# lint",
    "lint": "yarn turbo lint",
    "lint:eslint": "yarn turbo lint:eslint",
    "lint:old": "concurrently 'yarn lint:prettier' 'yarn lint:eslint' 'yarn lint:tsc'",
    "lint:eslint:old": "eslint \"./{packages,apps}/**/*.{js,jsx,ts,tsx}\"",
    "lint:tsc:old": "tsc --build ./ --force",
    "lint:prettier:old": "prettier --check \"**/*.{css,md,js,jsx,json,ts,tsx}\""
  }
}
