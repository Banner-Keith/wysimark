{
  "name": "slate-pluggable-packages",
  "packageManager": "yarn@3.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^18.11.18",
    "concurrently": "^7.2",
    "eslint": "^8.4.1",
    "eslint-config-custom": "*",
    "prettier": "^2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "start:local": "yarn workspace demo start:local",
    "-- lint": "# lint",
    "lint": "concurrently 'yarn lint:prettier' 'yarn lint:eslint' 'yarn lint:tsc'",
    "lint:eslint": "eslint \"./{packages,apps}/**/*.{js,jsx,ts,tsx}\"",
    "lint:tsc": "tsc --build ./ --force",
    "lint:prettier": "prettier --check \"**/*.{css,md,js,jsx,json,ts,tsx}\""
  }
}
