{
  "name": "slate-pluggable-packages",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^18.11.18",
    "concurrently": "^7.2",
    "eslint": "^8.4.1",
    "eslint-config-custom": "*",
    "prettier": "^2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4"
  },
  "packageManager": "yarn@3.3.1",
  "scripts": {
    "-- demo": "# demo",
    "open": "yarn workspace demo open",
    "start:local": "yarn workspace demo start:local",
    "-- lint": "# lint",
    "lint": "yarn turbo lint",
    "lint:eslint": "yarn turbo lint:eslint",
    "lint:prettier": "yarn turbo lint:prettier",
    "lint:tsc": "yarn turbo lint:tsc",
    "-- preset": "# Run preset from ~/presets",
    "preset": "ts-node --project $HOME/presets/tsconfig.ts-node.json $HOME/presets/bin/index.ts",
    "-- end": "# end"
  }
}
